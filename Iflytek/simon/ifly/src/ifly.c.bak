 * 1. rc
 * 2. error
 * 3. text
 * 4. service
 * 5. operation
 * 6. sematics
 * 7. data
 * 8. answer
 * 9. search_semantic
 * 10. dialog_stat
 * 11. demand_semantic
 * 12. orig_semantic
 * 13. moreResults
 *
 */
static const cJSON *get_child_node_by_name(const cJSON *msg, char *name) {
    const cJSON *current = NULL;
    const cJSON *find = NULL;

    current = msg;
    do {
        // try to find 'data'
        find = cJSON_GetObjectItem(current, name);
        //printf(">>>> object with name=%s %s\n", name, (find == NULL)?" is NULL.":" found!");
        if (find != NULL) {
            break;
        } else {
            current = current->child;
        }
    } while (current != NULL);

    return find;
}

static const cJSON *get_sibling_node_by_name(const cJSON *msg, char *name) {
    const cJSON *current = NULL;
    const cJSON *find = NULL;

    current = msg;
    do {
        find = cJSON_GetObjectItem(current, name);
        //printf(">>>> object with name=%s %s\n", name, (find == NULL)?" is NULL.":" found!");
        if (find != NULL) {
            break;
        } else {
            current = current->next;
        }
    } while (current != NULL);

    return find;
}

